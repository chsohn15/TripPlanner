
<% if @trip.errors.any? %>
    <% @trip.errors.full_messages.each do |msg| %>
        <%= msg %><br>
    <% end %>
<% end %>

<%= form_for @trip, class: "form-group" do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %><br>
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, as: :date, value: f.object.try(:strftime, "%m/%d/%Y"), class: "form-control"%><br>
    <%= f.label :end_date, "End Date" %>
    <%= f.date_field :end_date, as: :date, value: f.object.try(:strftime, "%m/%d/%Y"), class: "form-control"%><br>
    <div style="text-align:right;"><button type="submit" class="btn btn-primary"> <%=button_name %> </button></div>
<% end %>