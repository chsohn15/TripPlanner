
<h4><%= "Add #{@location.name} to My Trip!"%></h4>

<% if @trip_location.errors.any? %>
    <% @trip_location.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>


<%= form_for @trip_location, url:city_location_path(@location), method: :patch do |f| %>
    <%= f.label :trip_id %>
    <%= f.collection_select :trip_id, @trips, :id, :name %><br>
    <%= f.label :rating %>
    <%= f.number_field :rating, {min: 1, max: 10} %><br>
    <%= f.label :review %>
    <%= f.text_field :review %><br>
    <%= f.submit "Add to Trip"%>
<% end %>

<br>
<%= button_to "Plan a New Trip!", new_trip_path, method: :get %>
