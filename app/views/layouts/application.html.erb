<!DOCTYPE html>
<html>
  <head>
    <title>TripPlanner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="title">
      <h1> Trip Planner! </h1>
      <h3> Plan and Review Your Trips </h3>
    </div>
    <div class="header">
      <% unless params[:controller] == "sessions" &&  params[:action] == "login" %>
        <% if logged_in? %>
          <div class= "welcome"><strong> Welcome <%= current_user.display_name %></strong></div>
          <div class= "menu">
          <%= link_to "Home", home_path, method: :get %>       |
          <%= link_to "Logout", logout_path, method: :delete %>       |
          <%= link_to "My Account", user_path(current_user), method: :get %>
          </div>
        <% else %>
          <%= link_to "Home", home_path %>       |
          <%= link_to "Login", login_path %>       |
          <%= link_to "Create an Account", new_user_path %><br><br>       
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
