<div style="width: 60%; margin-left:auto; margin-right: auto;">
<h2> Edit stop </h2>

<% if @trip_location.errors.any? %>
    <%  @trip_location.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_for @trip_location, url: trip_trip_location_path, class: "form-group", method: :patch do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control" %>
    <%= f.label :review %>
    <%= f.text_field :review, class: "form-control" %><br>
    <div style= "text-align: right;"><button type="submit" class="btn btn-primary">Update Stop</button></div>
<% end %>
</div>


