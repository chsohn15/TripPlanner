
<span>
<button class="btn btn-outline-primary" style="float: right;" type="button"> <%= link_to "Search in a Different Country", home_path, method: :get %> </button>
</span>


<div style= "margin-left: auto; margin-right: auto; width: 60%;">
<h2><%= "Cities in #{@state.name}" %></h2><br>
  <%= form_tag(state_cities_path(params[:state_id]), {:class => "form-group", method: :get}) do %>
      <%= label_tag :sort_by, "Sort By"%>
      <%= select_tag(:sort_by, options_for_select(["Highest Rated", "Lowest Rated", "Most Visited", "Alphabetically (A-Z)"]), prompt: "#{params[:sort_by]}") %>
      <button type="submit" class="btn btn-primary">Search</button>
  <% end %>

  <table style="width: 60%">
    <tr>
      <th>City Name</th>
      <th style="width: 45%; text-align: center;">Average Rating</th>
    </tr>
    <% @cities.each do |city| %>
      <tr>
          <td style="text-align: left;"><%= link_to city.name, city_path(city) %></td>
          <td><%= city.average_rating %></td>
      </tr>
      <% end %>
  </table>
</div>



