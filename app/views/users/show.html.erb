<div style="width:75%; margin-left:auto; margin-right:auto;">
    <div style= "float:right;">
        <button class="btn btn-outline-primary" type= "button"><%= link_to "My Trips", trips_path, method: :get %></button>
        <button class="btn btn-outline-primary" type= "button"><%= link_to "Edit Account Information", edit_user_path(@user), method: :get %></button>
        <button class="btn btn-outline-primary" type= "button"><%= link_to "Delete Account", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete this account?"}%></button>
    </div>

    <h3> My Account Information </h3>
    <br><br>
    <div style="float:left;">
        <strong>Username:    </strong><%= "#{@user.username}" %><br><br>
        <strong>First Name:    </strong><%= "#{@user.first_name}" %><br><br>
        <strong>Last Name:    </strong><%= "#{@user.last_name}" %><br><br>
        <strong>Email Address:   </strong><%= "#{@user.email}" %><br><br>
    </div>
    <div style="float:right; margin-right: 20%;">
        <% if @user.trips.any? %>
            <h5>Cities Visited:</h5>
            <ul>
                <% @user.cities.each do |city| %>
                    <li><%= city.name %></li>
                <%end%>
            </ul>

            <h5>Countries Visited: </h5>
            <ul>
                <% @user.countries.each do |country|%>
                    <li><%= country.name %></li>
                <%end %>
            </ul>
        <%end %>
    </div>
</div>
